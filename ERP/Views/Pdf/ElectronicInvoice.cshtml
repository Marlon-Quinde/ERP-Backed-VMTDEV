@using ERP.Helper.Models.Views.Pdf
@model ElectronicInvoiceViewPdf

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Factura Electrónica</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0 auto;
            padding: 20px;
            max-width: 800px;
            color: #333;
        }

        h1, h2, h3 {
            text-align: center;
        }

        .header, .footer {
            text-align: center;
            margin-bottom: 20px;
        }

        .company-info, .client-info, .invoice-info {
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }

        table, th, td {
            border: 1px solid #ccc;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        .totals {
            text-align: right;
        }

        .qr {
            text-align: center;
            margin-top: 30px;
        }

        .footer {
            font-size: 12px;
            color: #777;
        }
    </style>
</head>
<body>

    <div class="header">
        <h1>Factura Electrónica</h1>
        <h3>Factura Nº: FE-000123</h3>
    </div>

    <div class="company-info">
        <strong>Emisor:</strong><br>
        Empresa S.A. de C.V.<br>
        RFC: EMP123456789<br>
        Dirección: Calle Ficticia 123, Ciudad, País<br>
        Tel: (000) 123-4567<br>
        Email: contacto@empresa.com
    </div>

    <div class="client-info">
        <strong>Receptor:</strong><br>
        @Model.name<br>
        RFC: CLI987654321<br>
        Dirección: Calle Cliente 456, Ciudad, País
    </div>

    <div class="invoice-info">
        <strong>Fecha de emisión:</strong> 2025-08-20<br>
        <strong>Método de pago:</strong> Transferencia<br>
        <strong>Forma de pago:</strong> Pago en una sola exhibición<br>
        <strong>Moneda:</strong> MXN
    </div>

    <table>
        <thead>
            <tr>
                <th>Cantidad</th>
                <th>Descripción</th>
                <th>Precio Unitario</th>
                <th>Importe</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>2</td>
                <td>Producto A</td>
                <td>$500.00</td>
                <td>$1,000.00</td>
            </tr>
        </tbody>
    </table>

    <div class="totals">
        <p><strong>Subtotal:</strong> $2,200.00</p>
        <p><strong>IVA (16%):</strong> $352.00</p>
        <p><strong>Total:</strong> $2,552.00</p>
    </div>

    <div class="qr">
        <p><strong>Folio Fiscal (UUID):</strong> 123e4567-e89b-12d3-a456-426614174000</p>
        <img src="https://api.qrserver.com/v1/create-qr-code/?data=123e4567-e89b-12d3-a456-426614174000&size=150x150" alt="QR Code">
    </div>

    <div class="footer">
        <p>Este documento es una representación impresa de un CFDI</p>
        <p>Sello digital del emisor y del SAT disponibles en el XML</p>
    </div>

</body>
</html>
